<h1>確認画面</h1>
<%= form_with(model: @photo, url: photos_path, local: true) do |form| %>
  <%= image_tag(@photo.image.url) if @photo.image && @photo.image.url %>
  <p>caption:<%= @photo.caption %></p>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :caption %>
  <%= form.submit "投稿する" %>
<% end %>

<%= form_with(model:@photo, url:new_photo_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
